@using EntityModel.Models;
@using WebDemo.Module;
@model xQuyen
@{
//string clsName = "xNhanVien";

    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header' style='text-align:center'>
                <button type='button' class='close' data-dismiss='modal' aria-label='Đóng'>
                    <span aria-hidden='true'>&times;</span>
                </button>
                <h2 class='modal-title' id='popupModalLabel'><b></b></h2>
            </div>
            <div class='modal-body'>
                <div class="box box-info">
                    <div class="box-header with-border"></div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body" id="frmEditor">
                        <div class='form-group' hidden="hidden">
                            <div class='col-sm-10'><input class="form-control" type='text' name='keyid' value='@Model.KeyID' /></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">@*@clsName.Translate("code")*@Mã</label>
                            <div class="col-sm-10">
                                <input class="form-control" type='text' name='code' value='@Model.Code' disabled='disabled' />
                                <span></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">@*@clsName.Translate("name")*@Tên</label>
                            <div class="col-sm-10">
                                <input class="form-control" type='text' name='name' value='@Model.Name' />
                                <span></span>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <div class="margin pull-right">
                            @*<button type='button' class='btn btn-primary' data-dismiss='modal' onclick='_save(this, event, @Model.KeyID)'>Lưu</button>*@
                            <button type='button' class='btn btn-secondary' data-dismiss='modal'>Hủy bỏ</button>
                            <button type='button' class='btn btn-primary' onclick='_saveAndAdd(this, event,@Model.KeyID)'>Lưu</button>
                        </div>
                    </div>
                    <!-- /.box-footer -->
                </div>
            </div>
        </div>
    </div>
}

