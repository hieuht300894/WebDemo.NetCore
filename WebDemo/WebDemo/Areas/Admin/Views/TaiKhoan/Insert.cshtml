@using EntityModel.Models;
@using WebDemo.Module;

@model xTaiKhoan

@{
    IList<xNhanVien> lstNhanVien = (ViewBag.DanhSachNhanVien as IEnumerable<xNhanVien>).ToList();

    <div class='modal-dialog' role='document'>
        <div class='modal-content'>
            <div class='modal-header' style='text-align:center'>
                <button type='button' class='close' data-dismiss='modal' aria-label='Đóng'>
                    <span aria-hidden='true'>&times;</span>
                </button>
                <h2 class='modal-title' id='popupModalLabel'><b></b></h2>
            </div>
            <div class='modal-body'>
                <div class="box box-info">
                    <div class="box-header with-border"></div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="box-body" id="frmEditor">
                        <div class='form-group' hidden="hidden">
                            <div class='col-sm-9'><input class="form-control" type='text' name='keyid' value='0' /></div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" style="text-align:left">Nhân viên</label>
                            <div class="col-sm-9">
                                <select class="form-control" style="width: 100%;" name='idnhanvien'>
                                    @foreach (xNhanVien nv in lstNhanVien)
                                    {
                                        <option value='@nv.KeyID'>@nv.Name</option>
                                    }
                                </select>
                                <span></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" style="text-align:left">Tên TK</label>
                            <div class="col-sm-9">
                                <input class="form-control" type='text' name='code' value='@Model.Code' />
                                <span></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" style="text-align:left">Mật khẩu</label>
                            <div class="col-sm-9">
                                <input class="form-control" type='password' name='password' value='@Model.Password' />
                                <span></span>
                            </div>
                        </div>
                    </div>

                        <!-- /.box-body -->
                        <div class="box-footer">
                            <div class="margin pull-right">
                                @*<button type='button' class='btn btn-primary' data-dismiss='modal' onclick='_save(this, event, @Model.KeyID)'>Lưu</button>*@
                                <button type='button' class='btn btn-secondary' data-dismiss='modal'>Hủy bỏ</button>
                                <button type='button' class='btn btn-primary' onclick='_saveAndAdd(this, event,@Model.KeyID)'>Lưu</button>
                            </div>
                        </div>
                        <!-- /.box-footer -->
                </div>
            </div>
        </div>
    </div>
}


